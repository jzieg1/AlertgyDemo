<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alertgy.alertgydemo">

    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/alertgy_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/alertgy_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SetupActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WarningPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HelpPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StartPageActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>